<% include header %>

<div class="ui main text container">
  <div class="ui huge header">
    Blog App
  </div>
  
  <div class="ui top attached segment">
    <div class="ui divided items">
         
         <% blogs.forEach(function(blog){ %>
      <div class="item">
        <div class="image">
          <img src = "<%= blog.image %>">
        </div>
         <div class = "content">
           <a class="header" href="/blogs/<%= blog._id %>"> <%= blog.title %> </a>
           <div class="meta">
             <span><%= blog.created.toDateString() %></span>
           </div>
           <div class="description">
             <p><h4> <%- blog.body.substring(0,50) %> ... </h4></p>
           </div>
           <div class="extra">
             <a class="ui floated basic black button" href="/blogs/<%= blog._id %>" > 
             Read More 
             <li class="right chevron icon"></li>
             </a>
           </div>
         </div>
      
      
      
      
      
      </div>
            
        <% }) %>
         
    </div>
  </div>
</div>





<% include footer %>